<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/basketball"
        android:scaleType="centerCrop" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:id="@+id/textView1">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="Team-A"
        android:textSize="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="0"
        android:id="@+id/score_view"
        android:layout_marginBottom="16dp"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 point"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:onClick="appendScoreBy2"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 point"
        android:layout_marginBottom="16dp"
        android:onClick="appendScoreBy3"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="free point"
        android:onClick="appendScoreBy1"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:text="Team-B"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:id="@+id/score_viewB"
            android:layout_marginBottom="16dp"
            android:textSize="40dp"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 point"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:onClick="appendScoreBy2B"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 point"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:onClick="appendScoreBy3B"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free point"
            android:layout_gravity="center_horizontal"
            android:onClick="appendScoreBy1B"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>


</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match is Running"
        android:textSize="20dp"
        android:layout_below="@id/textView1"
        android:textColor="@color/teal_200"
        android:id="@+id/winning_view"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Winner"
        android:layout_below="@id/winning_view"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:onClick="findWinner"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:onClick="resetScore"
        android:textColor="@color/black"/>
</RelativeLayout>